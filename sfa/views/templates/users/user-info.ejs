<form class="form-horizontal" role="form">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Nome</label>
        <div class="col-sm-5">
            {{userCtrl.user.nome}}
        </div>
    </div>

    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-5">
            {{userCtrl.user.email}}
        </div>
    </div>

    <div class="form-group">
        <label for="address" class="col-sm-2 control-label">Morada</label>
        <div class="col-sm-5">
            {{userCtrl.user.Morada}}
        </div>
    </div>

    <div class="form-group">
        <label for="phone" class="col-sm-2 control-label">Telefone</label>
        <div class="col-sm-5">
            {{userCtrl.user.telefone}}
        </div>
    </div>
</form>