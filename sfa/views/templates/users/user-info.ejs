<form class="form-horizontal" role="form">
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Nome</label>
        <div class="col-sm-5">
            {{userCtrl.user.Nome}}
        </div>
    </div>

    <div class="form-group">
        <label for="email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-5">
            {{userCtrl.user.Email}}
        </div>
    </div>

    <div class="form-group">
        <label for="address" class="col-sm-2 control-label">Morada</label>
        <div class="col-sm-5">
            {{userCtrl.user.Morada}}
        </div>
    </div>
    <div class="form-group">
        <label for="address" class="col-sm-2 control-label">Código Postal</label>
        <div class="col-sm-5">
            {{userCtrl.user.CPostal}}
        </div>
    </div>
    <div class="form-group">
        <label for="address" class="col-sm-2 control-label">Localidade</label>
        <div class="col-sm-5">
            {{userCtrl.user.Localidade}}
        </div>
    </div>

    <div class="form-group">
        <label for="phone" class="col-sm-2 control-label">Telemóvel</label>
        <div class="col-sm-5">
            {{userCtrl.user.Telemovel}}
        </div>
    </div>

    <div class="form-group">
        <label for="phone" class="col-sm-2 control-label">Comissão</label>
        <div class="col-sm-5">
            {{userCtrl.user.Comissao}} %
        </div>
    </div>
</form>