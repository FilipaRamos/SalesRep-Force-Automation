<div class="widget widget-nopad">

    <div class="widget-header">
        <i class="fa fa-fw fa-address-card"></i> Produtos
    </div>

    <div class="widget-content">
        <div class="widget big-stats-container">
            <div class="widget-content">

                <section ng-controller="ProductsController as productsCtrl" ng-init="productsCtrl.initCtrl()">
                    <ul class="nav nav-pills">
                        <li ng-class="{ active:productsCtrl.isSet(1) }">
                            <a href ng-click="productsCtrl.setTab(1)">Top</a>
                        </li>
                        <li ng-class="{ active:productsCtrl.isSet(2) }">
                            <a href ng-click="productsCtrl.setTab(2)">Todos</a>
                        </li>
                    </ul>

                    <div ng-show="productsCtrl.isSet(2)">
                        <form>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Stock</th>
                                    <th>Preço</th>
                                    <th>Vendas</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="product in productsCtrl.products">
                                    <td>
                                        <a href="/produto?=id{{product.id}}">{{product.Nome}}</a>
                                    </td>
                                    <td>{{product.stock | currency:"€" }}</td>
                                    <td>{{product.PrecoMedio | currency:"€" }}</td>
                                    <td>{{product.vendas}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>

                    <div ng-show="productsCtrl.isSet(1)">
                        <form>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Stock</th>
                                    <th>Preço</th>
                                    <th>Vendas</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="product in productsCtrl.products | orderBy: '-vendas' | limitTo: 10">
                                    <td>
                                        <a href="/produto?=id{{product.id}}">{{product.Nome}}</a>
                                    </td>
                                    <td>{{product.stock | currency:"€" }}</td>
                                    <td>{{product.PrecoMedio | currency:"€" }}</td>
                                    <td>{{product.vendas}}</td>
                                </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>