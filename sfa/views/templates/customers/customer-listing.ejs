<div class="widget widget-nopad">
    <div class="widget-header"><i class="fa fa-fw fa-address-card"></i> Clientes
        <a href="/criar_cliente" class="pull-right"><i class="fa fa-plus-square">&nbsp</i></a>
    </div>

    <div class="widget-content">
        <div class="widget big-stats-container">
            <div class="widget-content">

                <section ng-controller="CustomersController as customersCtrl" ng-init="customersCtrl.initCtrl()">
                    <ul class="nav nav-pills">
                        <li ng-class="{ active:customersCtrl.isSet(1) }">
                            <a href ng-click="customersCtrl.setTab(1)">Top</a>
                        </li>
                        <li ng-class="{ active:customersCtrl.isSet(2) }">
                            <a href ng-click="customersCtrl.setTab(2)">Potenciais</a>
                        </li>
                        <li ng-class="{ active:customersCtrl.isSet(3) }">
                            <a href ng-click="customersCtrl.setTab(3)">Todos</a>
                        </li>
                    </ul>

                    <div ng-show="customersCtrl.isSet(3)">
                        <form>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th style="width: 20%;">Nome</th>
                                    <th style="width: 30%;">Morada</th>
                                    <th style="width: 20%;">Telefone</th>
                                    <th style="width: 30%;">Vendas</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="customer in customersCtrl.customers | orderBy : '-Nome'">
                                    <td><a href="cliente?id={{customer.id}}">{{customer.Nome}}</a></td>
                                    <td>{{customer.Fac_Mor}}</td>
                                    <td>{{customer.Fac_Tel}}</td>
                                    <td>{{customer.vendas | currency:"€" }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>

                    <div ng-show="customersCtrl.isSet(2)">
                        <form>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th style="width: 20%;">Nome</th>
                                    <th style="width: 30%;">Morada</th>
                                    <th style="width: 20%;">Telefone</th>
                                    <th style="width: 30%;">Vendas</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="customer in customersCtrl.customers"
                                    ng-show="customer.vendas==0">
                                    <td><a href="cliente?id={{customer.id}}">{{customer.Nome}}</a></td>
                                    <td>{{customer.Fac_Mor}}</td>
                                    <td>{{customer.Fac_Tel}}</td>
                                    <td>{{customer.vendas | currency:"€" }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>

                    <div ng-show="customersCtrl.isSet(1)">
                        <form>
                            <table class="table">
                                <thead>
                                <tr>
                                    <th style="width: 20%;">Nome</th>
                                    <th style="width: 30%;">Morada</th>
                                    <th style="width: 20%;">Telefone</th>
                                    <th style="width: 30%;">Vendas</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr ng-repeat="customer in customersCtrl.customers | orderBy : '-vendas' | limitTo : 10">
                                    <td><a href="cliente?id={{customer.id}}">{{customer.Nome}}</a></td>
                                    <td>{{customer.Fac_Mor}}</td>
                                    <td>{{customer.Fac_Tel}}</td>
                                    <td>{{customer.vendas | currency:"€" }}</td>
                                </tr>
                                </tbody>
                            </table>
                            </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>