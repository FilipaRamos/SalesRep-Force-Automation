    <div class="container">
        <div class="row">
            <!-- Form To Display Client Information -->
            <form role="form">

                <!-- Customer Name -->
                <div class="form-group row">
                    <label for="customer_name" class="col-sm-2 col-form-label"> Nome: </label>
                    <div class="col-sm-10">
                        <input name="customer_name" type="text" class="form-control" style="width: 300px;"
                               placeholder="{{customerCtrl.customer.nome}}" disabled/>
                    </div>
                </div>

                <!-- Fiscal Name -->
                <div class="form-group row">
                    <label for="fiscal_name" class="col-sm-2 col-form-label"> Nome Fiscal: </label>
                    <div class="col-sm-10">
                        <input name="fiscal_name" type="text" class="form-control" style="width: 300px;"
                               placeholder="{{customerCtrl.customer.nome_fiscal}}" disabled/>
                    </div>
                </div>

                <!-- NIF -->
                <div class="form-group row">
                    <label for="nif" class="col-sm-2 col-form-label"> NIF: </label>
                    <div class="col-sm-10">
                        <input name="nif" type="text" class="form-control" style="width: 300px;"
                               placeholder="{{customerCtrl.customer.contribuinte}}" disabled/>
                    </div>
                </div>

                <!-- Address -->
                <div class="form-group row" ng-show="{{customerCtrl.customer.morada}}">
                    <label for="address" class="col-sm-2 col-form-label"> Morada: </label>
                    <div class="col-sm-10">
                        <input name="address" type="text" class="form-control" style="width: 300px;"
                               placeholder="{{customerCtrl.customer.morada}}" disabled/>
                    </div>
                </div>

                <!-- Email -->
                <div class="form-group row" ng-show="{{customerCtrl.customer.email}}">
                    <label for="email" class="col-sm-2 col-form-label"> Email: </label>
                    <div class="col-sm-10">
                        <input name="email" type="email" class="form-control" style="width: 300px;"
                               placeholder="{{customerCtrl.customer.email}}" disabled/>
                    </div>
                </div>

                <!-- Telefone -->
                <div class="form-group row" ng-show="{{customerCtrl.customer.telefone}}">
                    <label for="telephone" class="col-sm-2 col-form-label"> Telefone: </label>
                    <div class="col-sm-10">
                        <input name="telephone" type="tel" class="form-control" style="width: 300px;"
                               placeholder="{{customerCtrl.customer.telefone}}" disabled/>
                    </div>
                </div>

                <!-- Total de Vendas -->
                <div class="form-group row">
                    <label for="total-sales" class="col-sm-2 col-form-label control-label"> Total Vendas: </label>
                    <div class="col-sm-10">
                        <input name="total-sales" type="text" class="form-control" style="width: 300px;"
                               placeholder="{{customerCtrl.customer.vendas}}" disabled/>
                    </div>
                </div>
            </form>
        </div>
    </div>