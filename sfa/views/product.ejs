<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">

<head>
    <% include templates/common/header.ejs %>
    <link rel="stylesheet" type="text/css" href="stylesheets/pages/products.css"/>
</head>


<body ng-app="productsModule">
<div id="wrapper" ng-controller="SessionController as sessionCtrl" ng-init="sessionCtrl.initCtrl('<%= user %>')">
    <% include templates/common/nav-bar.ejs %>

    <div id="page-wrapper">
        <div class="container-fluid">

            <% include templates/common/breadcrumbs.ejs %>

            <div class="row" ng-controller="ProductController as productCtrl"
                 ng-init="productCtrl.initCtrl('<%= productId %>')">

                <div class="col-md-12">

                    <div ng-show="productCtrl.loadingInfo" class="col-md-9">
                        <% include templates/common/loading.ejs %>
                    </div>

                    <div ng-hide="productCtrl.loadingInfo" class="thumbnail">
                        <div class="caption-full">
                            <div class="pull-right">
                                <h4><span class="text-muted small">PVP1  </span>{{productCtrl.product.PVP1 |
                                    currency:"€"}}</h4>
                                <h4 ng-hide="productCtrl.product.PVP2==0"><span class="text-muted small">PVP2  </span>{{productCtrl.product.PVP2
                                    | currency:"€"}}</h4>
                                <h4 ng-hide="productCtrl.product.PVP3==0"><span class="text-muted small">PVP3  </span>{{productCtrl.product.PVP3
                                    | currency:"€"}}</h4>
                                <h4 ng-hide="productCtrl.product.PVP4==0"><span class="text-muted small">PVP4  </span>{{productCtrl.product.PVP4
                                    | currency:"€"}}</h4>
                                <h4 ng-hide="productCtrl.product.PVP5==0"><span class="text-muted small">PVP5  </span>{{productCtrl.product.PVP5
                                    | currency:"€"}}</h4>
                                <h4 ng-hide="productCtrl.product.PVP6==0"><span class="text-muted small">PVP6  </span>{{productCtrl.product.PVP6
                                    | currency:"€"}}</h4>
                                <h4><span class="text-muted small">Unidade  </span>{{productCtrl.product.UnidadeVenda}}
                                </h4>
                                <p> IVA {{productCtrl.product.IVA}}%</p>
                            </div>
                            <h4>{{productCtrl.product.CodArtigo}}</h4>
                            <br ng-hide="productCtrl.product.PVP2==0">
                            <br ng-hide="productCtrl.product.PVP4==0">
                            <br ng-hide="productCtrl.product.PVP3==0">
                            <br ng-hide="productCtrl.product.PVP5==0">
                            <br ng-hide="productCtrl.product.PVP6==0">
                            <br>
                            <br>
                            <br>

                            <p> {{productCtrl.product.DescArtigo}}</p>
                        </div>
                    </div>

                </div>

                <div class="col-md-12">
                    <% include templates/products/warehouse-listing.ejs %>
                </div>

                <div class="col-md-12">
                    <div class="text-right">
                        <a href="/nova_encomenda?produtoId=<%= productId %>" class="btn btn-primary">Encomendar</a>
                    </div>
                </div>

            </div>

        </div>
        <% include templates/common/footer.ejs %>
    </div>
</div>

<script type="text/javascript" src="javascripts/custom/products-module.js"></script>
</body>

</html>