<!DOCTYPE html>
<html>

<head>
    <% include templates/common/header.ejs %>
</head>

<body ng-app="newOrderModule">
<div id="wrapper">
    <% include templates/common/nav-bar.ejs %>

    <div id="page-wrapper">
        <div class="container-fluid" ng-controller="OrderController as newOrderCtrl">

            <% include templates/common/breadcrumbs.ejs %>

            <div class="row-align-center" ng-controller="CustomerController as customerCtrl" ng-init="newOrderCtrl.initCtrl('<%= id %>', customerCtrl);">

                <div class="span6" ng-init="currentCtrl = customerCtrl;">
                    <% include templates/customers/customer-info.ejs %>
                </div>

                <div class="span12" ng-init="showTick = false;">
                    <% include templates/orders/product-listing.ejs %>
                </div>

                <div class="span12">
                    <button type="button" class="btn btn-primary" ng-click="newOrderCtrl.cancelOrder()" ng-disabled="newOrderCtrl.waitingAPIResponse"> Cancelar</button>
                </div>

            </div>
        </div>
        <% include templates/common/footer.ejs %>
    </div>
</div>
<script src="javascripts/custom/customers-module.js"></script>
<script src="javascripts/custom/products-module.js"></script>
<script src="javascripts/custom/orders-module.js "></script>
</body>
</html>