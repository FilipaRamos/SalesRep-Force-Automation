<!DOCTYPE html>
<html>
<head>
    <title> <%= title %> </title>
    <% include templates/header.ejs %>
</head>
<body>
<div id="wrapper">
    <% include templates/nav-bar.ejs %>
    <div id="page-wrapper">
        <div class="container-fluid">

            <% include templates/breadcrums.ejs %>

            <div class="row">
                <div class="span6">
                    <form action="/login" method="post">

                        <!-- Client Name -->
                        <div class="form-group row">
                            <label for="offer_name" class="col-sm-2 col-form-label"> Nome </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="offer_name"
                                       placeholder="Nome da Empresa ...">
                            </div>
                        </div>

                        <!-- Fiscal Name -->
                        <div class="form-group row">
                            <label for="offer_name" class="col-sm-2 col-form-label"> Nome Fiscal </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="offer_name" placeholder="Nome Fiscal ...">
                            </div>
                        </div>

                        <!-- Morada -->
                        <div class="form-group row">
                            <label for="offer_name" class="col-sm-2 col-form-label"> Morada </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="offer_name"
                                       placeholder="Morada da Empresa ...">
                            </div>
                        </div>

                        <!-- Telefone -->
                        <div class="form-group row">
                            <label for="offer_name" class="col-sm-2 col-form-label"> Telefone </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="offer_name" placeholder="Telefone ...">
                            </div>
                        </div>

                        <!-- NIF -->
                        <div class="form-group row">
                            <label for="offer_name" class="col-sm-2 col-form-label"> NIF </label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="offer_name"
                                       placeholder="NIF da Empresa ...">
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group row">
                            <div class="offset-sm-2 col-sm-10">
                                <button type="submit" id="submit_offer" class="btn btn-primary"> Adicionar Cliente
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
</body>
</html>