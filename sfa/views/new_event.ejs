<!DOCTYPE html>
<html ng-app="sfa">

<head>
    <title> <%= title %> </title>
    <% include templates/header.ejs %>
</head>

<body>
<div id="wrapper">
    <% include templates/nav-bar.ejs %>
    <div id="page-wrapper">
        <div class="container-fluid">

            <% include templates/breadcrums.ejs %>

            <div class="row">
                <div class="span12">
                    <form action="/login" method="post">
                        <div class="row">
                            <div class="span6">
                                <!-- Description -->
                                <div class="form-group row">
                                    <label for="event_type" class="col-sm-2 col-form-label"> Tipo de evento </label>
                                    <div class="col-sm-10">
                                        <select class="form-control selectpicker">
                                            <option value="---">Selecione um tipo</option>
                                            <option value="---">Selecione um tipo</option>
                                        </select>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="form-group row">
                                    <label for="offer_description" class="col-sm-2 col-form-label"> Descrição </label>
                                    <div class="col-sm-10">
                                <textarea rows="3" cols="20" class="form-control" id="offer_description"
                                          placeholder="Descrição ..."></textarea>
                                    </div>
                                </div>

                                <!-- TODO add datetime input -->

                                <!-- Notes -->
                                <div class="form-group row">
                                    <label for="offer_description" class="col-sm-2 col-form-label"> Notas </label>
                                    <div class="col-sm-10">
                                <textarea rows="3" cols="20" class="form-control" id="offer_description"
                                          placeholder="Notas ..."></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="span6">
                                <% include templates/costumer-finder.ejs %>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group row">
                            <div class="offset-sm-2 col-sm-10">
                                <button type="submit" id="submit_offer" class="btn btn-primary"> Criar evento</button>
                            </div>
                        </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="javascripts/custom/new_event.js"></script>
</body>
</html>